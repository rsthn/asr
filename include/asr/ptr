#ifndef __ASR_PTR_H
#define __ASR_PTR_H

#include <asr/defs>
#include <unordered_map>

namespace asr
{
    class refs
    {
        public:
            static const void *add (const void *ptr);
            static bool remove (const void *ptr);
            static int count (const void *ptr);
            static void shutdown();
    };

    template<class T>
    class ptr
    {
        private:

        T *value = nullptr;

        public:

        /**
         */
        ptr()
        { }

        ptr (T *value) {
            set(value);
        }

        ptr (const ptr& other) {
            set(other.value);
        }

        ptr (const ptr&& other) noexcept {
            set(other.value);
        }

        virtual ~ptr() {
            if (refs::remove(value))
                delete value;
        }

        /**
         */
        T* operator->() const {
            return value;
        }

        T* get() const {
            return value;
        }

        int count() const {
            return refs::count(value);
        }

        void set (T *new_value)
        {
            if (value != new_value) {
                if (refs::remove(value))
                    delete value;
                value = (T*)refs::add(new_value);
            }
        }

        /**
         */
        ptr& operator= (const ptr& other) {
            set(other.value);
            return *this;
        }

        ptr& operator= (ptr&& other) noexcept
        {
            if (value == other.value)
                return *this;

            if (refs::remove(value))
                delete value;

            value = other.value;
            other.value = nullptr;
            return *this;
        }

        /**
         * Drops the value (and sets to null) but does not delete it if there are no more references to it.
         */
        void drop() {
            refs::remove(value);
            value = nullptr;
        }

        /**
         */
        bool operator== (void *other) const {
            return value == other;
        }

        bool operator!= (void *other) const {
            return value != other;
        }

        /**
         */
        operator T*() const {
            return value;
        }
    };
};

#endif
